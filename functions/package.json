{
  "name": "best-wishes-api",
  "description": "Cloud Functions for Firebase project bestwishes",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "secure": "firebase deploy --only firestore:rules",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "exports": "./index.js",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "domino": "^2.1.6",
    "firebase-admin": "^11.10.1",
    "firebase-functions": "^4.4.1",
    "isomorphic-fetch": "^3.0.0",
    "page-metadata-parser": "^1.1.4"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^8.50.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "firebase-tools": "^12.5.4",
    "prettier": "^3.0.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "google",
      "prettier"
    ],
    "plugins": [
      "eslint-plugin-prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true
  },
  "private": true
}
